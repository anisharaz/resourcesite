generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String          @id @default(cuid())
  name          String?
  email         String          @unique
  emailVerified DateTime?
  image         String?
  role          Role            @default(STUDENT)
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  accounts      Account[]
  Authenticator Authenticator[]
  sessions      Session[]
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

model Authenticator {
  credentialID         String  @unique
  userId               String
  providerAccountId    String
  credentialPublicKey  String
  counter              Int
  credentialDeviceType String
  credentialBackedUp   Boolean
  transports           String?
  user                 User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, credentialID])
}

model program {
  id           Int          @id @default(autoincrement())
  program_name String       @unique
  departments  department[]
}

model department {
  id              Int      @id @default(autoincrement())
  department_name String   @unique
  department_code String   @unique
  program_name    String
  branches        branch[]
  program         program  @relation(fields: [program_name], references: [program_name])
}

model branch {
  id              Int        @id @default(autoincrement())
  branch_name     String     @unique
  branch_code     String     @unique
  department_code String
  available_sems  Json
  department      department @relation(fields: [department_code], references: [department_code])
  section         section[]
  subjects        subjects[]
}

model section {
  id           Int       @id @default(autoincrement())
  section_name String    @unique
  branch_name  String
  modules      modules[]
  branch       branch    @relation(fields: [branch_name], references: [branch_name])
}

model subjects {
  id                 Int       @id @default(autoincrement())
  branch_code        String
  semesters_num      Int
  subject_code       String    @unique
  subject_name       String
  subject_short_name String
  module             modules[]
  branch             branch    @relation(fields: [branch_code], references: [branch_code])
  semester           semesters @relation(fields: [semesters_num], references: [sem_number])
}

model semesters {
  id         Int        @id @default(autoincrement())
  sem_number Int        @unique
  subjects   subjects[]
}

model modules {
  id                 Int      @id @default(autoincrement())
  subject_code       String
  module_no          Int
  module_name        String
  module_description String
  module_url         Json
  section_name       String
  section            section  @relation(fields: [section_name], references: [section_name])
  subjects           subjects @relation(fields: [subject_code], references: [subject_code])
}

enum Role {
  STUDENT
  TEACHER
  ADMIN
}
